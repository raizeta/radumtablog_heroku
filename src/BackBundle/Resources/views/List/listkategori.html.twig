{% extends "BackBundle::layout.html.twig" %}

{% block title %}BackBundle:List:index{% endblock %}

{% block body %}
<div class="content-wrapper">


        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-md-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">List Of Category</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Nama Kategori</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for entities in entities %}
                    <tr>
                      <td>{{entities.id}}</td>
                      <td>{{entities.namaKategori}}</td>
                      <td><a href="{{path('edit_kategori',{'namakategori':entities.namaKategori}) }}">Edit</a></td>
                      <td><a href="{{path('delete_kategori',{'namakategori':entities.namaKategori}) }}">Delete</a></td>
                    </tr>
                    {% endfor %}
                  </tbody>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
{% endblock %}
