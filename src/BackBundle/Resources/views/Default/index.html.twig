{% extends 'BackBundle::layout.html.twig' %}
{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">


<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <div class="row">
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-aqua">
        <div class="inner">
          <h3>{{jlhuser}}</h3>
          <p>Users</p>
        </div>
        <div class="icon">
          <i class="ion ion-bag"></i>
        </div>
        <a href="{{url('list_user')}}" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-green">
        <div class="inner">
          <h3>{{jlhpost}}</h3>
          <p>Posts</p>
        </div>
        <div class="icon">
          <i class="ion ion-stats-bars"></i>
        </div>
        <a href="{{url('list_post')}}" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3>{{jlhkategori}}</h3>
          <p>Category</p>
        </div>
        <div class="icon">
          <i class="ion ion-person-add"></i>
        </div>
        <a href="{{url('list_kategori')}}" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
      <!-- small box -->
      <div class="small-box bg-red">
        <div class="inner">
          <h3>{{jlhkomentar}}</h3>
          <p>Comments</p>
        </div>
        <div class="icon">
          <i class="ion ion-pie-graph"></i>
        </div>
        <a href="{{url('list_komentar')}}" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
      </div>
    </div><!-- ./col -->
  </div><!-- /.row -->
  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <section class="col-lg-7 connectedSortable">

      <!-- TO DO List -->
      

      <!-- quick email widget -->
      <div class="box box-info">
        <div class="box-header">
          <i class="fa fa-envelope"></i>
          <h3 class="box-title">New Post</h3>
          <!-- tools box -->
          <div class="pull-right box-tools">
            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
          </div><!-- /. tools -->
        </div>
        <div class="box-body">
          {{ form_start(form_post) }}
            <div class="form-group">
                    <div class="input-group">
                   <span class="input-group-addon">@</span>
                      {{ form_widget(form_post.judul,{'attr':{'class':'form-control','placeholder':'Post Tittle'}})}}
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group">
                   <span class="input-group-addon">@</span>
                      {{ form_widget(form_post.slug,{'attr':{'class':'form-control','placeholder':'Post Slug'}})}}
                  </div>
                  </div>
                  <div class="form-group">
                      {{ form_widget(form_post.isi,{'attr':{'class':'form-control','placeholder':'Post Content'}})}}
                  </div>

                  <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">@</span>
                        {{ form_widget(form_post.kategori,{'attr':{'class':'form-control'} })}}
                      </div>
                  </div>

                  <div class="form-group">
                    <label>
                      {{ form_widget(form_post.visible)}} Enabled
                    </label>
                  </div>
                  <div class="box-footer clearfix">
                    <button class="pull-right btn btn-default" id="sendEmail">Send <i class="fa fa-arrow-circle-right"></i></button>
                  </div>
            {{form_end(form_post)}}
        </div>
        
      </div>
    </section><!-- /.Left col -->

    <!-- right col-->
    <section class="col-lg-5 connectedSortable">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">New Category</h3>
          <div class="pull-right box-tools">
            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
          {{ form_start(form_kategori) }}
            <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">@</span>
                    {{ form_widget(form_kategori.namaKategori,{'attr':{'class':'form-control','placeholder':'Nama Kategori'}})}}
                  </div>
              </div>

              <div class="box-footer clearfix">
                  <button class="pull-right btn btn-default" id="sendEmail">Send <i class="fa fa-arrow-circle-right"></i></button>
              </div>
          {{form_end(form_kategori)}}
        </div>
      </div>
    </section>
    <!-- right col -->

  </div><!-- /.row (main row) -->
</section><!-- /.content -->
</div><!-- /.content-wrapper -->
{% endblock body %}